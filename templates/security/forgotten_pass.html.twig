<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}COZE - Mot de passe oublié{% endblock %}</title>
        <link rel="icon" href="{{ asset('img/coze.svg') }}">
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}
        <link rel="stylesheet" href="{{ asset('css/style.css') }}">


        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <header>
            <a style="color:black;" href="{{ path('home') }}"><h1>C<span><img src="{{ asset('img/coze.svg') }}" height="48px"></span>ZE</h1></a>
            <div class="container"><a href="{{ path('app_register') }}"><button class="btn">INSCRIPTION</button></a></div>
        </header>
        {% block body %}
        <form method="post">


        {% if app.user %}
        <div class="mb-3">
            Vous êtes déja connecté en tant que {{ app.user.userIdentifier }}, <a class="a" href="{{ path('app_logout') }}">Déconnexion</a><a class="a" href="{{ path('home') }}">{{ app.user.userIdentifier }}</a>
        </div>
        {% endif %}

        <h1 id="connexion" class="h3 mb-3 font-weight-normal"><span></span>Mot de passe oubllié<span></span></h1>
        {{ form_start(emailForm) }}
        {{ form_row(emailForm.email) }}
        <a class="a">
        {{ form_row(emailForm.envoyer, {'id': 'btn_form'}) }}
        <span class="line -right"></span>
        <span class="line -top"></span>
        <span class="line -left"></span>
        <span class="line -bottom"></span>
        </a>
    <div class="drops">
        <div class="drop drop-1"></div>
        <div class="drop drop-2"></div>
        <div class="drop drop-3"></div>
        <div class="drop drop-4"></div>
        <div class="drop drop-5"></div>
        <div class="drop drop-6"></div>
    </div>
        {{ form_end(emailForm) }}
</form>
{% endblock %}