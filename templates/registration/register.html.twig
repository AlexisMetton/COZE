<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}COZE - Inscription{% endblock %}</title>
        <link rel="icon" href="{{ asset('img/coze.svg') }}">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}
        <link rel="stylesheet" href="{{ asset('css/style.css') }}">


        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <header>
            <a style="color:black;" href="{{ path('home') }}"><h1>C<span><img src="{{ asset('img/coze.svg') }}" height="48px"></span>ZE</h1></a>
            <div class="container"><a href="{{ path('app_login') }}"><button class="btn">CONNEXION</button></a></div>
        </header>
{% block body %}
    {{ form_start(registrationForm) }}
    <h1 id="connexion" class="h3 mb-3 font-weight-normal"><span></span>S'INSCRIRE<span></span></h1>
    <div style="display: grid;grid-template-columns: 1fr 1fr;">
    {{ form_row(registrationForm.username) }}
    {{ form_row(registrationForm.email) }}
    {{ form_row(registrationForm.plainPassword, {
        label: 'Password'
    }) }}
    {{ form_row(registrationForm.agreeTerms) }}</div>
    <a class="a">
        <span><button id="btn_form" class="btn btn-lg btn-primary" type="submit">
        S'inscrire
        </button></span>
        <span class="line -right"></span>
        <span class="line -top"></span>
        <span class="line -left"></span>
        <span class="line -bottom"></span>
    </a>

    <div class="drops">
        <div class="drop drop-1"></div>
        <div class="drop drop-2"></div>
        <div class="drop drop-3"></div>
        <div class="drop drop-4"></div>
        <div class="drop drop-5"></div>
        <div class="drop drop-6"></div>
    </div>
    {{ form_end(registrationForm) }}
{% endblock %}
